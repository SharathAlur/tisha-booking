rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Halls collection - read/write for owner app
    match /halls/{hallId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Bookings collection - full access for owner app
    match /bookings/{bookingId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
